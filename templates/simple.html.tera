<!--
  Tera template for Simple uploader page with i18n translation keys
-->
<!DOCTYPE html>
<html lang="{{ lang | default(value='en') }}">
  <head>
    <meta charset="utf-8" />
    {% if query.m is defined and query.m == "File Deleted Successfully." %}
      <meta http-equiv="refresh" content="1.2;url=/simple">
    {% endif %}

    <title>{{ t.simple_title | default(value='Orange JuiceBox') }}</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="stylesheet" href="/css/simple.css" />
    <link rel="icon" href="/img/favicon.webp" type="image/webp" />
  </head>
  <body>
    {% if query.m is defined and query.m == "File Deleted Successfully." %}
      <div class="status-message status-success" id="delete-success-msg">
        {{ t.simple_delete_success | default(value="File successfully deleted.") }}
      </div>
    {% endif %}
    <nav class="skip-links" aria-label="Skip links">
      <a href="#mainContent" class="skip-link">{{ t.skip_main | default(value="Skip to main content") }}</a>
    </nav>
    <h1 class="page-title">{{ t.simple_title | default(value='Orange JuiceBox') }}</h1>
    <p id="mainDesc" class="lead">{{ t.simple_lead }}</p>
    
    <form method="get" action="/simple" aria-label="Language selector (no JavaScript)" class="lang-form">
      <label for="langSelectSimple" id="langLabelSimple" class="lang-label">
        <span aria-hidden="true" class="lang-icon">ğŸŒ</span>
        <span class="visually-hidden">{{ t.language_select | default(value="Select language") }}</span>
        <select id="langSelectSimple" name="lang" aria-labelledby="langLabelSimple">
          <option value="en" {% if lang == "en" %}selected{% endif %}>ğŸ‡¬ğŸ‡§ English</option>
          <option value="fr" {% if lang == "fr" %}selected{% endif %}>ğŸ‡«ğŸ‡· FranÃ§ais</option>
          <option value="es" {% if lang == "es" %}selected{% endif %}>ğŸ‡ªğŸ‡¸ EspaÃ±ol</option>
        </select>
      </label>
      <button type="submit" class="lang-btn">OK</button>
    </form>
    
    <form
      id="mainContent"
      class="upload"
      method="post"
      enctype="multipart/form-data"
      action="/simple/upload"
      aria-describedby="mainDesc"
      aria-label="{{ t.simple_form_aria }}"
    >
    {% if MESSAGE is defined %}
      <div class="status-message status-success" id="delete-success-msg">
        {{ MESSAGE }}
      </div>
    {% endif %}

      <fieldset>
        
        <label for="file">{{ t.simple_files_label }}</label>
        <input id="file" type="file" name="file" multiple required />
        <div class="ttl-box">
          <label for="ttl" class="ttl-label">{{ t.retention }}</label>
          <select name="ttl" id="ttl">
            <option>1h</option>
            <option>3h</option>
            <option>12h</option>
            <option>1d</option>
            <option selected>3d</option>
            <option>7d</option>
            <option>14d</option>
          </select>
          <span class="note-extra">{{ t.auto_delete }}</span>
        </div>
        <button class="primary" type="submit">{{ t.simple_upload_btn }}</button>
      </fieldset>
    </form>
    <div
      class="files-panel"
      role="region"
      aria-label="{{ t.simple_files_panel_aria }}"
    >
      <h2 class="files-heading">{{ t.your_files }}</h2>
      <table class="files-table" role="table" aria-describedby="tableNote">
        <thead>
          <tr>
            <th>{{ t.simple_table_name }}</th>
            <th>{{ t.simple_table_expires }}</th>
            <th>{{ t.simple_table_delete }}</th>
          </tr>
        </thead>
        <tbody>
          {% if ROWS is defined %}
            {{ ROWS }}
          {% endif %}
        </tbody>
      </table>
      <p class="note" id="tableNote">{{ t.simple_table_note }}</p>
      <p class="note">{{ t.privacy_note }}</p>
    </div>
    <p class="note">{{ t.simple_return | safe }}</p>
    <footer
      title="{{ t.footer_tagline | default(value='Service tagline') }}"
    >
      juicebox // {{ t.footer_sub | default(value='simple high-speed file host') }}
    </footer>
  </body>
</html>
